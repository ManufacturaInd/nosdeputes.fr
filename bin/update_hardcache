#!/bin/bash
. bin/db.inc
TMPFILE=/tmp/hard_cache.$$

for url in synthese synthesetri/10 synthesetri/1 synthesetri/2 synthesetri/3 synthesetri/4 synthesetri/5 synthesetri/6 synthesetri/7 synthesetri/8 synthesetri/9;
do 
  rm web/$url.html
  curl http://www.nosdeputes.fr/$url > TMPFILE
  mv TMPFILE web/$url.html
done;

for (( seance_id = $(echo "select id from seance order by id DESC limit 1 " | mysql $MYSQLID $DBNAME | tail -n 1) ; seance_id > 0 ; seance_id-- ))
do
  if ! ls web/seance/$seance_id.html > /dev/null 2>&1 || test -z web/seance/$seance_id.html ;
  then
	echo $seance_id
	rm web/seance/$seance_id.html 2> /dev/null
	curl -q http://www.nosdeputes.fr/seance/$seance_id > TMPFILE
	mv TMPFILE web/seance/$seance_id.html
  fi
done

